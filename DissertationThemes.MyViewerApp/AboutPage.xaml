<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DissertationThemes.MyViewerApp.AboutPage"
             Title="Disertation Theme Viewer">
    <VerticalStackLayout>
        <Label 
            Text="Version: 1.0"
            FontAttributes="Bold"
            FontSize="50"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Author: Michal Murin"
            FontAttributes="Bold"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            Text="OK"
            Margin="10"            
            FontAttributes="Bold"
            FontSize="30"
            WidthRequest="100"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>